<!-- Conditional for R -->
<math xmlns="http://www.w3.org/1998/Math/MathML" display="block">
  <mrow>
    <mtext>If</mtext>
    <mspace width="0.3em"/>
    <msub><mi>R</mi><mtext>sRGB</mtext></msub>
    <mo>&#x2264;</mo>
    <mn>0.04045</mn><mo>,</mo>
    <mspace width="0.3em"/>
    <mtext>then</mtext>
    <mspace width="0.3em"/>
    <mi>R</mi>
    <mo>=</mo>
    <mfrac>
      <msub><mi>R</mi><mtext>sRGB</mtext></msub>
      <mn>12.92</mn>
    </mfrac>
    <mo>;</mo>
    <mspace width="0.3em"/>
    <mtext>else</mtext>
    <mspace width="0.3em"/>
    <mi>R</mi>
    <mo>=</mo>
    <msup>
      <mrow>
        <mo>(</mo>
        <mfrac>
          <mrow>
            <msub><mi>R</mi><mtext>sRGB</mtext></msub>
            <mo>+</mo>
            <mn>0.055</mn>
          </mrow>
          <mn>1.055</mn>
        </mfrac>
        <mo>)</mo>
      </mrow>
      <mn>2.4</mn>
    </msup>
  </mrow>
</math>

